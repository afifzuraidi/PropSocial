<%= form_with(model: customer_application) do |form| %>
  <% if customer_application.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(customer_application.errors.count, "error") %> prohibited this customer_application from being saved:</h2>

      <ul>
        <% customer_application.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= form.text_field :name, class:"form-control", placeholder: "Name" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :email, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= form.text_field :email, class:"form-control", placeholder: "Email" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :mobile, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= form.text_field :mobile, class:"form-control", placeholder: "Mobile" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :photo, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= form.file_field  :photo, accept: 'image/*', class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-6">
      <%= form.submit "Submit", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
